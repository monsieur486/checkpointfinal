{% extends 'base.html.twig' %}

{% block title %}Circuit index{% endblock %}

{% block body %}
    <h1>Circuit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DatePresentation</th>
                <th>Ville</th>
                <th>Places</th>
                <th>Slug</th>
                <th>Adresse01</th>
                <th>Adresse02</th>
                <th>Codepostal</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Resume</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.datePresentation ? circuit.datePresentation|date('Y-m-d') : '' }}</td>
                <td>{{ circuit.ville }}</td>
                <td>{{ circuit.places }}</td>
                <td>{{ circuit.slug }}</td>
                <td>{{ circuit.adresse01 }}</td>
                <td>{{ circuit.adresse02 }}</td>
                <td>{{ circuit.codepostal }}</td>
                <td>{{ circuit.longitude }}</td>
                <td>{{ circuit.latitude }}</td>
                <td>{{ circuit.resume }}</td>
                <td>{{ circuit.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('circuit_show', {'id': circuit.id}) }}">show</a>
                    <a href="{{ path('circuit_edit', {'id': circuit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('circuit_new') }}">Create new</a>
{% endblock %}
